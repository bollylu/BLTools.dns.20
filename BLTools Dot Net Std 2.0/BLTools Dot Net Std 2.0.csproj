<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>BLTools</AssemblyName>
    <RootNamespace>BLTools</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Luc Bolly</Authors>
    <Company>Luc Bolly</Company>
    <AssemblyVersion>4.5.5.0</AssemblyVersion>
    <FileVersion>4.5.5.0</FileVersion>
    <Version>4.5.5</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Frame\**" />
    <Compile Remove="Json\**" />
    <EmbeddedResource Remove="Frame\**" />
    <EmbeddedResource Remove="Json\**" />
    <None Remove="Frame\**" />
    <None Remove="Json\**" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Debugging\" />
    <Folder Include="Extension methods\Math\" />
    <Folder Include="MVVM\" />
  </ItemGroup>

</Project>
